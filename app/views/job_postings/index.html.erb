<p id="notice">
  <%= notice %>
</p>

<h1>Job Postings</h1>

<table>
  <thead>
    <tr>
      <th>Position name</th>
      <th>Position desc</th>
      <th>Location</th>
      <th>Benefits</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_postings.each do |job_posting| %>
    <tr>
      <td>
        <%= job_posting.position_name %>
      </td>
      <td>
        <%= job_posting.position_desc %>
      </td>
      <td>
        <%= job_posting.location %>
      </td>
      <td>
        <%= job_posting.benefits %>
      </td>
      <td>
        <%= job_posting.employer.name %>
      </td>
      <td>
        <%= link_to 'Show', job_posting_url(job_posting) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_job_posting_url(job_posting) %>
      </td>
      <td>
        <%= link_to 'Destroy', job_posting, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Employer', new_employer_url %>
<%= link_to 'New Job Posting', 'job_postings/new' %>