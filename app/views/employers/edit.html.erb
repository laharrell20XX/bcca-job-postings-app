<h1>Editing Employer</h1>

<%= render 'form', employer: @employer %>

<% if @admin %>
<%= link_to 'Show', admin_employer_path(@employer) %> |
<%= link_to 'Back', admin_employers_path %>

<% else %>
<%= link_to 'Show', user_employer_path(@employer) %> |
<%= link_to 'Back', user_employers_path %>

<% end %>